<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <p>{{blogpost.title}}</p>
        </h2>
        <p>Posted by {{blogpost.user.username}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{blogpost.content}}
        </p>
    </div>
</div>
{{#each blogpost.comments as |comment|}}
<div class="row mb-4 project">
    <div class="col-md-5">
        <p>Commented by {{comment.user.username}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{comment.content}}
        </p>
    </div>
</div>
{{/each}}