<div>
  <button class="btn btn-primary" type="button" id="new-blogpost">Make a new post</button>
</div>
{{#if blogposts.length}}
{{#each blogposts as |blogpost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Posted by {{blogpost.user.username}} on {{format_date blogpost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}
{{else}}
<div class="row mb-4 project">
  <p>This is where I would keep your posts</p>
  <h2>IF YOU HAD ANY!</h2>
</div>
{{/if}}

<script src="./js/homepage.js"></script>