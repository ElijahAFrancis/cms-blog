<div class="row">
  <div class="col-md-6">
    <h2>Update your Post!</h2>

    <form class="form blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">Title</label>
        <input class="form-input" type="text" id="blogpost-title" value="{{blogpost.title}}"/>
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content</label>
        <input class="form-input" type="text" id="blogpost-content" value="{{blogpost.content}}"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="update-blogpost-submit" data-id="{{blogpost.id}}">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="../../js/updateblogpost.js"></script>